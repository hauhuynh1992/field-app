<?xml version="1.0" encoding="utf-8"?>
                                                                   

    

                 
                            
                                                                                             
           

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" android:tag="layout/fragment_detail_customer_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout
            android:id="@+id/rl_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/imb_ic_filter"
                android:layout_toRightOf="@+id/imb_ic_back"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title"
                    style="@style/Toolbar_Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Chi tiết khách hàng" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/imb_ic_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:background="@null"
                android:padding="16dp"
                android:src="@drawable/ic_back" />

            <ImageButton
                android:id="@+id/imb_ic_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:background="@null"
                android:clickable="false"
                android:padding="16dp"
                android:src="@drawable/ic_black_more"
                android:tint="@color/colorWhite"
                android:visibility="invisible" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#E9E9E9"
                    android:fontFamily="@font/inter_semi_bold"
                    android:paddingLeft="@dimen/_14sdp"
                    android:paddingTop="@dimen/_12ssp"
                    android:paddingRight="@dimen/_14sdp"
                    android:paddingBottom="@dimen/_12ssp"
                    android:text="Thông tin cá nhân"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/inter_semi_bold"
                    android:text="Họ và tên: "
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:fontFamily="@font/inter_light"
                    android:text="Kim Nga"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_14sdp"
                    android:fontFamily="@font/inter_semi_bold"
                    android:text="Số điện thoại: "
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:fontFamily="@font/inter_light"
                    android:text="0983813648"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12ssp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#E9E9E9"
                    android:fontFamily="@font/inter_semi_bold"
                    android:paddingLeft="@dimen/_14sdp"
                    android:paddingTop="@dimen/_12ssp"
                    android:paddingRight="@dimen/_14sdp"
                    android:paddingBottom="@dimen/_12ssp"
                    android:text="Hoá đơn"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12ssp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_images"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_14sdp"
                    android:fontFamily="@font/inter_semi_bold"
                    android:text="Mã hoá đơn: "
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:fontFamily="@font/inter_light"
                    android:text="2476227829191"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#E9E9E9"
                    android:fontFamily="@font/inter_semi_bold"
                    android:paddingLeft="@dimen/_14sdp"
                    android:paddingTop="@dimen/_12ssp"
                    android:paddingRight="@dimen/_14sdp"
                    android:paddingBottom="@dimen/_12ssp"
                    android:text="Gói khuyến mãi"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12ssp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_promotion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#E9E9E9"
                    android:fontFamily="@font/inter_semi_bold"
                    android:paddingLeft="@dimen/_14sdp"
                    android:paddingTop="@dimen/_12ssp"
                    android:paddingRight="@dimen/_14sdp"
                    android:paddingBottom="@dimen/_12ssp"
                    android:text="Chọn quà"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12ssp" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_gift"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </ScrollView>


    </LinearLayout>

         