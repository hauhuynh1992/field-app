<?xml version="1.0" encoding="utf-8"?>
                                                                   

    

                 
                            
                                                                                             
           

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" android:tag="layout/fragment_input_name_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E9E9E9"
                android:paddingLeft="@dimen/_16sdp"
                android:paddingTop="@dimen/_12sdp"
                android:paddingRight="@dimen/_16sdp"
                android:paddingBottom="@dimen/_12sdp"
                android:text="Điền thông tin"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_16sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_24sdp"
                android:text="Họ và tên: "
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_14ssp" />

            <EditText
                android:id="@+id/edt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:background="@drawable/background_rectangle_transparent_round_corner"
                android:hint="example@mail.com"
                android:paddingLeft="@dimen/_6sdp"
                android:paddingTop="@dimen/_8sdp"
                android:paddingRight="@dimen/_6sdp"
                android:paddingBottom="@dimen/_8sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_24sdp"
                android:text="Số điện thoại: "
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_14ssp" />

            <EditText
                android:id="@+id/edt_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:background="@drawable/background_rectangle_transparent_round_corner"
                android:hint="Nhập số điện thoại"
                android:paddingLeft="@dimen/_6sdp"
                android:paddingTop="@dimen/_8sdp"
                android:paddingRight="@dimen/_6sdp"
                android:paddingBottom="@dimen/_8sdp" />

            <Button
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_48sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:background="@drawable/background_rectangle_blue_round_corner"
                android:text="Tiếp theo" />

        </LinearLayout>

    </LinearLayout>

         